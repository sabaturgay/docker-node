{
  "name": "docker-node",
  "version": "0.0.1",
  "description": "A Docker wrapped node.js app starter",
  "main": "index.js",
  "author": {
    "name": "turgaysaba",
    "url": "http://www.turgaysaba.com/"
  },
  "scripts": {
    "dev": "ts-node-dev --project tsconfig.json --no-notify -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:pm2": "pm2-runtime start npm --name \"docker-node\" -- run \"start\"",
    "start:docker": "docker run -p 8080:8080 -d turgaysaba/node-app",
    "type-check": "tsc --noEmit",
    "build": "rm -rf dist && yarn build:js",
    "build:docker": "docker build . -t turgaysaba/node-app | tee docker.build.log",
    "build:js": "babel src -d dist --extensions \".js,.jsx,.ts,.tsx\" --copy-files",
    "postinstall": "yarn prisma",
    "prisma": "pal g && prisma generate && prisma generate --schema ./prisma-serverless-data/schema.prisma"
  },
  "dependencies": {
    "@graphql-tools/merge": "8.2.1",
    "@graphql-tools/schema": "8.3.1",
    "@graphql-tools/utils": "8.5.5",
    "@paljs/plugins": "4.0.0",
    "@prisma/client": "3.6.0",
    "@sentry/node": "6.16.1",
    "@sentry/tracing": "6.16.1",
    "apollo-server-core": "3.5.0",
    "apollo-server-express": "3.5.0",
    "colay": "0.0.72",
    "cors": "2.8.5",
    "cron": "1.8.2",
    "dotenv": "10.0.0",
    "expo-server-sdk": "3.6.0",
    "express": "4.17.2",
    "firebase-admin": "10.0.1",
    "glob": "7.2.0",
    "graphql": "16.2.0",
    "graphql-middleware": "6.1.13",
    "graphql-tag": "2.12.6",
    "jsonwebtoken": "8.5.1",
    "kafkajs": "1.15.0",
    "lodash.get": "4.4.2",
    "mongodb": "4.2.2",
    "node-fetch": "3.1.0",
    "passport": "0.5.2",
    "passport-github": "1.1.0",
    "passport-google-oauth2": "0.2.0",
    "passport-jwt": "4.0.0",
    "qs": "6.10.2",
    "stripe": "8.194.0",
    "toad-scheduler": "1.6.0"
  },
  "devDependencies": {
    "@paljs/cli": "4.0.12",
    "@playlyfe/gql": "2.6.2",
    "@types/cron": "1.7.3",
    "@types/jsonwebtoken": "8.5.6",
    "@types/passport": "1.0.7",
    "colay-dev": "0.0.24",
    "prisma": "3.6.0",
    "typescript": "4.5.2"
  },
  "private": true
}
